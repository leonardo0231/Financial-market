# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/trading_bot.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ROTATION_HOURS=24
ENVIRONMENT=development

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
# SECRET_KEY=your_secret_key_here

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=trading_bot
POSTGRES_PASSWORD=supersecret
POSTGRES_DB=trading_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_ENABLED=true

# MetaTrader 5
MT5_TERMINAL_PATH=PATH_OF_MT5
MT5_LOGIN=LOGGING_USER
MT5_PASSWORD=PASSWORD
MT5_SERVER=SERVER

# Telegram
TELEGRAM_TOKEN=YOUR_API_KEY
TELEGRAM_CHAT_IDS=CHAT_IDs
TELEGRAM_BOT_USERNAME=@YOUR_BOT_USERNAME
TELEGRAM_ENABLED=true
TELEGRAM_RETRY_ATTEMPTS=3
TELEGRAM_RETRY_DELAY=5

# Finnhub
FINNHUB_API_KEY=YOUR_API_KEY

# Performance Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000
PROMETHEUS_METRICS_PATH=/metrics
# SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENABLED=false
SENTRY_TRACES_SAMPLE_RATE=0.1

# Trading Configuration
MAX_POSITIONS=3
DEFAULT_RISK_PERCENT=2.0
SLIPPAGE_POINTS=10
MAGIC_NUMBER=123456

# Orch
ORCH_HOST=127.0.0.1
ORCH_PORT=8000

# Risk Management
MAX_DAILY_LOSS=500
MAX_DRAWDOWN_PERCENT=10
POSITION_SIZE_MULTIPLIER=1.0
ATR_PERIOD=14
RISK_REWARD_MIN_RATIO=1.5

# Strategy Configuration
STRATEGY_ENABLED=AlBrooksStrategy,LindaRaschkeStrategy,ICTStrategy
TIMEFRAME=M15
LOOKBACK_PERIODS=100

# Development Settings
DEVELOPMENT_MODE=false
DEBUG_MT5=false
DEBUG_STRATEGIES=false
TEST_MODE=false

# AI
GPT_API_KEY=YOUR_API_KEY
